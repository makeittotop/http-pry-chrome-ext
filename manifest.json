{
	"manifest_version": 2,

	"name": "HTTP Pry",
	"description": "This extension can track specified http requests/responses",
	"version": "1.0",

	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "index.html"
	},

    "permissions": [
          "storage",
          "webRequest",
          "webRequestBlocking",
          "*://*/"
    ]    
}
